<%= link_to "Log Out", logout_path, method: :delete %>

<h2><%= @idea.title %> - <%=@idea.category.name%></h2>
<p><%= link_to "Edit", edit_user_idea_path(current_user, @idea) %> - <%= link_to "Delete", user_idea_path(current_user, @idea), method: :delete %></p>

<section class="content">
  <p class="content"><%= @idea.content %></p>
</section>

<section class="grid">
  <% @idea.images.each do |image| %>
    <img src="<%= image.url %>" alt="<%= image.alt_tag%>">
  <% end %>
</section>
